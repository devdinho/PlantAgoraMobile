      {
        "id": "seasi_support",
        "question": "Recebe acompanhamento técnico da SEASI?",
        "type": "radio",
        "required": true,
        "options": [
          { "label": "Sim", "value": "sim" },
          { "label": "Não", "value": "nao" }
        ]
      },
      {
        "id": "infrastructure_evaluation",
        "question": "Avaliação da infraestrutura da horta comunitária",
        "type": "radio",
        "required": true,
        "options": [
          { "label": "Excelente", "value": "excelente" },
          { "label": "Boa", "value": "boa" },
          { "label": "Regular", "value": "regular" },
          { "label": "Ruim", "value": "ruim" },
          { "label": "Muito ruim", "value": "muito_ruim" }
        ]
      },
      {
        "id": "infrastructure_meets_needs",
