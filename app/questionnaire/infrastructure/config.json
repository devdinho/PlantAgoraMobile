        "conditionalField": {
          "showWhen": "difficult_inputs",
          "equals": "outros",
          "field": {
            "id": "other_difficult_inputs",
            "type": "textarea",
            "question": "Quais são os outros insumos de difícil acesso?",
            "required": false,
            "placeholder": "Especifique os outros insumos aqui..."
